{
  "compilerOptions": { 

    /* Language and Environment */
    "target": "ESNext",                       

    /* Modules */
    "module": "ESNext", 
    "rootDir": "./src",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/tests/**/*", "node_modules/**/*"]
}